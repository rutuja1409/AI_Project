{
    "name": "shabby_pages",
    "gpu_ids": [
        0
    ],
    "seed": -1,
    "finetune_norm": false,
    "path": {
        "base_dir": "experiments",
        "code": "code",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
        "resume_state": null
    },
    "datasets": {
        "train": {
            "which_dataset": {
                "name": [
                    "data.shabby_pages",
                    "ShabbyPages"
                ],
                "args": {
                    "dataset_path": "/run/user/3841/gvfs/sftp:host=login1.pegasus.kl.dfki.de/ds/documents/ShabbyPages",
                    "image_size": 256,
                    "stage": "train",
                    "use_gray_gt": true
                }
            },
            "dataloader": {
                "args": {
                    "batch_size": 8,
                    "num_workers": 8,
                    "shuffle": true,
                    "pin_memory": true,
                    "drop_last": true
                }
            }
        },
        "test": {
            "which_dataset": {
                "name": [
                    "data.shabby_pages",
                    "ShabbyPages"
                ],
                "args": {
                    "dataset_path": "/run/user/3841/gvfs/sftp:host=login1.pegasus.kl.dfki.de/ds/documents/ShabbyPages",
                    "image_size": 256,
                    "stage": "test",
                    "use_gray_gt": true
                }
            },
            "dataloader": {
                "args": {
                    "batch_size": 4,
                    "num_workers": 8,
                    "shuffle": false,
                    "pin_memory": true
                }
            }
        },
        "validation": {
            "which_dataset": {
                "name": [
                    "data.shabby_pages",
                    "ShabbyPages"
                ],
                "args": {
                    "dataset_path": "/run/user/3841/gvfs/sftp:host=login1.pegasus.kl.dfki.de/ds/documents/ShabbyPages",
                    "image_size": 256,
                    "stage": "validation",
                    "use_gray_gt": true
                }
            },
            "dataloader": {
                "args": {
                    "batch_size": 4,
                    "num_workers": 8,
                    "shuffle": false,
                    "pin_memory": true
                }
            }
        }
    },
    "model": {
        "which_model": {
            "name": [
                "models.model",
                "Palette"
            ],
            "args": {
                "sample_num": 8,
                "task": "binarization",
                "ema_scheduler": {
                    "ema_start": 1,
                    "ema_iter": 1,
                    "ema_decay": 0.9999
                },
                "optimizers": [
                    {
                        "lr": 5e-5,
                        "weight_decay": 0
                    }
                ]
            }
        },
        "which_networks": [
            {
                "name": [
                    "models.network",
                    "Network"
                ],
                "args": {
                    "init_type": "kaiming",
                    "module_name": "ds_unet",
                    "unet": {
                        "in_channel": 4,
                        "out_channel": 1,
                        "inner_channel": 64,
                        "channel_mults": [
                            1,
                            2,
                            4,
                            2
                        ],
                        "attn_res": [
                            16,
                            8
                        ],
                        "num_head_channels": 32,
                        "res_blocks": 1,
                        "dropout": 0.2,
                        "image_size": 256
                    },
                    "beta_schedule": {
                        "train": {
                            "schedule": "linear",
                            "n_timestep": 1000,
                            "linear_start": 1e-6,
                            "linear_end": 0.01
                        },
                        "test": {
                            "schedule": "linear",
                            "n_timestep": 1000,
                            "linear_start": 1e-4,
                            "linear_end": 0.09
                        }
                    }
                }
            }
        ],
        "which_losses": [
            "mse_loss"
        ],
        "which_metrics": [
            "mae"
        ]
    },
    "train": {
        "n_epoch": 2000,
        "n_iter": 1e8,
        "val_epoch": 5,
        "save_checkpoint_epoch": 10,
        "log_iter": 1e4,
        "tensorboard": true
    },
    "debug": {
        "val_epoch": 1,
        "save_checkpoint_epoch": 1,
        "log_iter": 10,
        "debug_split": 50
    }
}